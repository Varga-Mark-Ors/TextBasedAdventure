<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="gameBase" prefHeight="800" prefWidth="1280" stylesheets="@../Styles/game.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.felakalandra.controller.GameController">

    <ImageView fx:id="gameBackground" fitHeight="800.0" fitWidth="1280.0" pickOnBounds="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
   <VBox fx:id="characterLeftBg" layoutX="118.0" layoutY="280.0" prefHeight="260.0" prefWidth="260.0" AnchorPane.bottomAnchor="250.0" AnchorPane.leftAnchor="70.0">
      <children>
          <ImageView fx:id="characterLeft" fitHeight="260.0" fitWidth="260.0" />
      </children>
   </VBox>
   <VBox fx:id="characterRightBg" prefHeight="260.0" prefWidth="260.0" AnchorPane.bottomAnchor="250.0" AnchorPane.rightAnchor="70.0">
      <children>
          <ImageView fx:id="characterRight" fitHeight="260.0" fitWidth="260.0" />
      </children>
   </VBox>

    <Label fx:id="daysLabel" text="Days: 0" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="10.0" />

    <Label fx:id="scoreLabel" text="Score: 0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="10.0" />

    <Label fx:id="timeCurrent" styleClass="time-label" text="Time: 07:00" AnchorPane.leftAnchor="250.0" AnchorPane.topAnchor="10.0" />
    <Label fx:id="timeDay" layoutX="614.0" layoutY="50.0" text="Daytime" AnchorPane.rightAnchor="250.0" AnchorPane.topAnchor="10.0" />

    <Button fx:id="menuButton" onAction="#showMenu" text="Menu" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" />

    <VBox alignment="CENTER" layoutY="15.0" prefWidth="400.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="400.0" AnchorPane.rightAnchor="400.0" AnchorPane.topAnchor="0.0">

        <HBox fx:id="upperSection" alignment="CENTER" prefHeight="80.0" spacing="10.0">
            <Label fx:id="hpLabel" text="HP: 100" />
            <Label fx:id="damageLabel" text="DMG: 20" />
            <Label fx:id="goldLabel" text="Gold: 50" />
        </HBox>

        <VBox fx:id="gameplayText" prefHeight="500.0">
            <Label fx:id="mainText" text="Charachters yapping here..." wrapText="true" />
        </VBox>

        <HBox fx:id="choices" alignment="CENTER" prefHeight="80.0" spacing="20.0">
            <Button fx:id="choiceButton1" text="Option 1" />
            <Button fx:id="choiceButton2" text="Option 2" />
            <Button fx:id="choiceButton3" text="Option 3" />
        </HBox>
    </VBox>

</AnchorPane>
